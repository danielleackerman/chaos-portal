    </div>
  </footer>

  <script is:inline>
    // === THEME ===
    (function(){var r=document.documentElement,b=document.getElementById('theme-toggle'),K='chaos-portal-theme';function a(t){var d=t==='dark';d?r.classList.add('dark-mode'):r.classList.remove('dark-mode');if(b){b.textContent=d?'â˜€ï¸ Light Mode':'ðŸŒ™ Dark Mode';b.setAttribute('aria-pressed',String(d))}}a(localStorage.getItem(K)||'dark');document.addEventListener('click',function(e){if(e.target.closest('#theme-toggle')){var d=r.classList.contains('dark-mode');var n=d?'light':'dark';a(n);localStorage.setItem(K,n)}})})();

    // === SEARCH ===
    (function(){var m=document.getElementById('search-modal'),t=document.getElementById('search-trigger'),c=document.getElementById('search-close'),p=document.getElementById('pagefind-container'),init=false;function gb(){var l=document.querySelector('link[href*="pagefind"]');return l?l.href.replace('/pagefind/pagefind-ui.css',''):''}function op(){if(!m)return;m.classList.add('is-open');if(!init&&p){var b=gb(),s=document.createElement('script');s.src=b+'/pagefind/pagefind-ui.js';s.onload=function(){if(typeof PagefindUI!=='undefined')new PagefindUI({element:p,showSubResults:true,showImages:false,autofocus:true,baseUrl:b+'/'})};document.head.appendChild(s);init=true}setTimeout(function(){var i=p&&p.querySelector('input');if(i)i.focus()},150)}function cl(){if(m)m.classList.remove('is-open')}if(t)t.addEventListener('click',op);if(c)c.addEventListener('click',cl);if(m)m.addEventListener('click',function(e){if(e.target===m)cl()});document.addEventListener('keydown',function(e){if((e.metaKey||e.ctrlKey)&&e.key==='k'){e.preventDefault();m&&m.classList.contains('is-open')?cl():op()}if(e.key==='Escape'&&m&&m.classList.contains('is-open'))cl()})})();

    // === SIDEBAR TOC + SCROLL SPY ===
    (function(){var tl=document.getElementById('sidebar-toc-list'),tn=document.getElementById('sidebar-toc');if(!tl)return;var ct=document.querySelector('.page-content');if(!ct)return;var items=[];var gl=ct.querySelectorAll('.toc-grid__link');if(gl.length>0){gl.forEach(function(l){var h=l.getAttribute('href');if(h&&h.startsWith('#'))items.push({id:h.substring(1),text:l.textContent.trim()})})}else{ct.querySelectorAll('h2[id], h3[id]').forEach(function(h){var t=h.textContent.trim();if(t.length>0&&t.length<80)items.push({id:h.id,text:t,level:h.tagName})})}if(items.length===0){ct.querySelectorAll('.section[id]').forEach(function(s){var h=s.querySelector('h2,h3');if(h)items.push({id:s.id,text:h.textContent.trim()})})}if(items.length===0){if(tn)tn.style.display='none';return}items.forEach(function(i){var li=document.createElement('li'),a=document.createElement('a');a.href='#'+i.id;a.className='sidebar-toc__link'+(i.level==='H3'?' sidebar-toc__link--sub':'');a.textContent=i.text;a.setAttribute('data-target',i.id);li.appendChild(a);tl.appendChild(li)});var links=tl.querySelectorAll('.sidebar-toc__link'),tgts=[];items.forEach(function(i){var e=document.getElementById(i.id);if(e)tgts.push({id:i.id,el:e})});function spy(){var sp=window.scrollY+120,aid='';for(var i=tgts.length-1;i>=0;i--){if(tgts[i].el.offsetTop<=sp){aid=tgts[i].id;break}}links.forEach(function(l){l.classList.toggle('is-active',l.getAttribute('data-target')===aid)})}var tick=false;window.addEventListener('scroll',function(){if(!tick){requestAnimationFrame(function(){spy();tick=false});tick=true}});spy()})();

    // === SIDEBAR TOGGLE ===
    (function(){var lay=document.getElementById('page-layout'),sb=document.getElementById('page-sidebar'),tog=document.getElementById('sidebar-toggle'),cls=document.getElementById('sidebar-close'),ov=document.getElementById('sidebar-overlay'),SK='chaos-portal-sidebar';if(!lay||!sb||!tog)return;var pd=lay.getAttribute('data-sidebar-default')||'open';function gs(){try{return localStorage.getItem(SK)}catch(e){return null}}function ss(v){try{localStorage.setItem(SK,v)}catch(e){}}var saved=gs();var initOpen=pd==='closed'?false:(saved!==null?(saved==='open'):true);function desk(open){if(open){lay.classList.add('sidebar-open');lay.classList.remove('sidebar-closed')}else{lay.classList.remove('sidebar-open');lay.classList.add('sidebar-closed')}}function mobOpen(){sb.classList.add('is-open');if(ov)ov.classList.add('is-open');document.body.style.overflow='hidden'}function mobClose(){sb.classList.remove('is-open');if(ov)ov.classList.remove('is-open');document.body.style.overflow=''}if(window.innerWidth>=1080)desk(initOpen);tog.addEventListener('click',function(){if(window.innerWidth>=1080){var o=lay.classList.contains('sidebar-open');desk(!o);if(pd!=='closed')ss(!o?'open':'closed')}else{sb.classList.contains('is-open')?mobClose():mobOpen()}});if(cls)cls.addEventListener('click',mobClose);if(ov)ov.addEventListener('click',mobClose);window.addEventListener('resize',function(){if(window.innerWidth>=1080)mobClose()})})();

    // === SIBLINGS TOGGLE ===
