---
import '../styles/global.css';

interface Props {
  title: string;
  currentPage?: string;
}

const { title, currentPage = '' } = Astro.props;
const base = import.meta.env.BASE_URL;

const compassSections = [
  { slug: 'orientation', num: 'I', title: 'Orientation' },
  { slug: 'horizontal-axis', num: 'II', title: 'Horizontal Axis' },
  { slug: 'story-structure', num: 'IIA', title: 'Story Structure' },
  { slug: 'vertical-axis', num: 'III', title: 'Vertical Axis' },
  { slug: 'intersection-logic', num: 'IV', title: 'Intersection Logic' },
  { slug: 'navigation-protocols', num: 'V', title: 'Navigation Protocols' },
  { slug: 'practical-application', num: 'VI', title: 'Practical Application' },
  { slug: 'implementation-guide', num: 'VII', title: 'Implementation Guide' },
];

const url = Astro.url.pathname;
const currentSlug = url.split('/compass/')[1]?.replace(/\/$/, '') || '';
const isCompassSection = currentPage === 'compass' && currentSlug !== '';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} | Chaos Portal</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&display=swap" rel="stylesheet" />
  <link href={`${base}/pagefind/pagefind-ui.css`} rel="stylesheet" />
</head>
<body>
  <header class="site-header">
    <div class="site-header__inner">
      <a class="site-brand" href={`${base}/`}>
        <span class="site-brand__title">CHAOS PORTAL</span>
        <span class="site-brand__subtitle">Beta</span>
      </a>
      <nav class="site-nav">
        <a href={`${base}/`} aria-current={currentPage === 'home' ? 'page' : undefined}>
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px;"><rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/></svg>
          Home
        </a>
        <a href={`${base}/library/music/`} aria-current={currentPage === 'library' ? 'page' : undefined}>
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px;"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>
          Library
        </a>
        <a href={`${base}/compass/`} aria-current={currentPage === 'compass' ? 'page' : undefined}>
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px;"><circle cx="12" cy="12" r="10"/><polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"/></svg>
          Compass
        </a>
      </nav>
      <div style="display:flex; gap:0.5rem; align-items:center;">
        <button class="global-search-trigger" id="search-trigger" type="button">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
          Search
          <kbd>âŒ˜K</kbd>
        </button>
        <button class="theme-toggle" id="theme-toggle" type="button" aria-label="Toggle theme">ðŸŒ™ Dark Mode</button>
      </div>
    </div>
  </header>

  <div class="search-modal" id="search-modal">
    <div class="search-modal__inner">
      <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:1rem;">
        <span style="font-size:0.875rem; font-weight:600; color:var(--text);">Search Portal</span>
        <button id="search-close" style="background:none; border:none; cursor:pointer; color:var(--text-3); font-size:1.25rem; padding:0.25rem; line-height:1;">âœ•</button>
      </div>
      <div id="pagefind-container"></div>
    </div>
  </div>

  <!-- Sidebar: thin icon rail (always visible) + expandable panel -->
  <aside class="sidebar-rail" id="sidebar-rail">
    <div class="rail-icons">
      <button class="rail-icon" id="rail-expand" type="button" aria-label="Expand sidebar" title="Expand sidebar">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2"/><line x1="9" y1="3" x2="9" y2="21"/></svg>
      </button>
      <a class="rail-icon" href={`${base}/`} title="Home">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/></svg>
      </a>
      <a class="rail-icon" href={`${base}/library/music/`} title="Library">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>
      </a>
      <a class="rail-icon" href={`${base}/compass/`} title="Compass">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"/></svg>
      </a>
      <button class="rail-icon" id="rail-search" type="button" title="Search">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
      </button>
    </div>
  </aside>

  <aside class="page-sidebar" id="page-sidebar">
    <div class="sidebar-inner">
      <button class="sidebar-close" id="sidebar-close" type="button" aria-label="Close sidebar">âœ•</button>
      <nav class="sidebar-toc" id="sidebar-toc">
        <div class="sidebar-section__label">On This Page</div>
        <ul class="sidebar-toc__list" id="sidebar-toc-list"></ul>
      </nav>
      {isCompassSection && (
        <nav class="sidebar-siblings">
          <button class="sidebar-section__toggle" id="siblings-toggle" type="button">
            <span class="sidebar-section__label">Compass Sections</span>
            <svg class="sidebar-section__chevron" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"/></svg>
          </button>
          <ul class="sidebar-siblings__list" id="siblings-list">
            {compassSections.map(s => (
              <li>
                <a href={`${base}/compass/${s.slug}/`}
                   class={`sidebar-siblings__link ${currentSlug === s.slug ? 'is-active' : ''}`}>
                  <span class="sidebar-siblings__num">{s.num}</span>
                  {s.title}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      )}
    </div>
  </aside>
  <div class="sidebar-overlay" id="sidebar-overlay"></div>

  <!-- Page content: always full width, centered -->
  <main class="page-content" data-pagefind-body>
    <slot />
  </main>

  <button class="back-to-top" id="back-to-top" type="button" aria-label="Back to top">
    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="18 15 12 9 6 15"/></svg>
  </button>

  <footer class="site-footer">
    <div class="site-footer__inner">
      <span>Â© 2026 Danielle Ackerman Â· Chaos Portal Beta</span>
      <a href="https://github.com/danielleackerman" class="site-footer__github" target="_blank" rel="noopener noreferrer">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" style="vertical-align:-2px;"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        GitHub
      </a>
    </div>
  </footer>

  <script is:inline>
    // === THEME ===
    (function(){var r=document.documentElement,b=document.getElementById('theme-toggle'),K='chaos-portal-theme';function a(t){var d=t==='dark';d?r.classList.add('dark-mode'):r.classList.remove('dark-mode');if(b){b.textContent=d?'â˜€ï¸ Light Mode':'ðŸŒ™ Dark Mode';b.setAttribute('aria-pressed',String(d))}}a(localStorage.getItem(K)||'dark');document.addEventListener('click',function(e){if(e.target.closest('#theme-toggle')){var d=r.classList.contains('dark-mode');var n=d?'light':'dark';a(n);localStorage.setItem(K,n)}})})();

    // === SEARCH ===
    (function(){var m=document.getElementById('search-modal'),t=document.getElementById('search-trigger'),c=document.getElementById('search-close'),p=document.getElementById('pagefind-container'),init=false;function gb(){var l=document.querySelector('link[href*="pagefind"]');return l?l.href.replace('/pagefind/pagefind-ui.css',''):''}function op(){if(!m)return;m.classList.add('is-open');if(!init&&p){var b=gb(),s=document.createElement('script');s.src=b+'/pagefind/pagefind-ui.js';s.onload=function(){if(typeof PagefindUI!=='undefined')new PagefindUI({element:p,showSubResults:true,showImages:false,autofocus:true,baseUrl:b+'/'})};document.head.appendChild(s);init=true}setTimeout(function(){var i=p&&p.querySelector('input');if(i)i.focus()},150)}function cl(){if(m)m.classList.remove('is-open')}if(t)t.addEventListener('click',op);if(c)c.addEventListener('click',cl);if(m)m.addEventListener('click',function(e){if(e.target===m)cl()});document.addEventListener('keydown',function(e){if((e.metaKey||e.ctrlKey)&&e.key==='k'){e.preventDefault();m&&m.classList.contains('is-open')?cl():op()}if(e.key==='Escape'&&m&&m.classList.contains('is-open'))cl()})})();

    // === SIDEBAR TOC + SCROLL SPY ===
    (function(){var tl=document.getElementById('sidebar-toc-list'),tn=document.getElementById('sidebar-toc');if(!tl)return;var ct=document.querySelector('.page-content');if(!ct)return;var items=[];var gl=ct.querySelectorAll('.toc-grid__link');if(gl.length>0){gl.forEach(function(l){var h=l.getAttribute('href');if(h&&h.startsWith('#'))items.push({id:h.substring(1),text:l.textContent.trim()})})}else{ct.querySelectorAll('h2[id], h3[id]').forEach(function(h){var t=h.textContent.trim();if(t.length>0&&t.length<80)items.push({id:h.id,text:t,level:h.tagName})})}if(items.length===0){ct.querySelectorAll('.section[id]').forEach(function(s){var h=s.querySelector('h2,h3');if(h)items.push({id:s.id,text:h.textContent.trim()})})}if(items.length===0){if(tn)tn.style.display='none';return}items.forEach(function(i){var li=document.createElement('li'),a=document.createElement('a');a.href='#'+i.id;a.className='sidebar-toc__link'+(i.level==='H3'?' sidebar-toc__link--sub':'');a.textContent=i.text;a.setAttribute('data-target',i.id);li.appendChild(a);tl.appendChild(li)});var links=tl.querySelectorAll('.sidebar-toc__link'),tgts=[];items.forEach(function(i){var e=document.getElementById(i.id);if(e)tgts.push({id:i.id,el:e})});function spy(){var sp=window.scrollY+120,aid='';for(var i=tgts.length-1;i>=0;i--){if(tgts[i].el.offsetTop<=sp){aid=tgts[i].id;break}}links.forEach(function(l){l.classList.toggle('is-active',l.getAttribute('data-target')===aid)})}var tick=false;window.addEventListener('scroll',function(){if(!tick){requestAnimationFrame(function(){spy();tick=false});tick=true}});spy()})();

    // === SIDEBAR RAIL + PANEL ===
    (function(){
      var sb = document.getElementById('page-sidebar');
      var rail = document.getElementById('sidebar-rail');
      var expand = document.getElementById('rail-expand');
      var cls = document.getElementById('sidebar-close');
      var ov = document.getElementById('sidebar-overlay');
      var railSearch = document.getElementById('rail-search');
      if (!sb || !expand) return;

      function open() {
        sb.classList.add('is-open');
        if (ov) ov.classList.add('is-open');
      }
      function close() {
        sb.classList.remove('is-open');
        if (ov) ov.classList.remove('is-open');
      }

      expand.addEventListener('click', function() {
        sb.classList.contains('is-open') ? close() : open();
      });
      if (cls) cls.addEventListener('click', close);
      if (ov) ov.addEventListener('click', close);
      if (railSearch) railSearch.addEventListener('click', function() {
        var t = document.getElementById('search-trigger');
        if (t) t.click();
      });
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && sb.classList.contains('is-open')) close();
      });
    })();

    // === SIBLINGS TOGGLE ===
    (function(){var t=document.getElementById('siblings-toggle'),l=document.getElementById('siblings-list');if(!t||!l)return;l.style.display='none';t.addEventListener('click',function(){var h=l.style.display==='none';l.style.display=h?'block':'none';t.classList.toggle('is-expanded',h)})})();

    // === BACK TO TOP ===
    (function(){var b=document.getElementById('back-to-top');if(!b)return;window.addEventListener('scroll',function(){b.classList.toggle('is-visible',window.scrollY>400)});b.addEventListener('click',function(){window.scrollTo({top:0,behavior:'smooth'})})})();
  </script>
</body>
</html>
