    // === BACK TO TOP ===
    (function(){var b=document.getElementById('back-to-top');if(!b)return;window.addEventListener('scroll',function(){b.classList.toggle('is-visible',window.scrollY>400)});b.addEventListener('click',function(){window.scrollTo({top:0,behavior:'smooth'})})})();
  </script>
</body>
</html>
