// Usage: <RailClockArc />
---
<div class="rail-visual" aria-hidden="true">
  <svg width="72" height="72" viewBox="0 0 72 72" fill="none" xmlns="http://www.w3.org/2000/svg">
    <circle cx="36" cy="36" r="28" stroke="var(--border)" stroke-width="1.5"/>
    <!-- tick marks at 12, 3, 6, 9 -->
    <line x1="36" y1="8"  x2="36" y2="12" stroke="var(--semantic-h)" stroke-width="2" stroke-linecap="round"/>
    <line x1="64" y1="36" x2="60" y2="36" stroke="var(--semantic-h)" stroke-width="2" stroke-linecap="round"/>
    <line x1="36" y1="64" x2="36" y2="60" stroke="var(--semantic-h)" stroke-width="2" stroke-linecap="round"/>
    <line x1="8"  y1="36" x2="12" y2="36" stroke="var(--semantic-h)" stroke-width="2" stroke-linecap="round"/>
    <circle cx="36" cy="36" r="3" fill="var(--text-3)"/>
    <text x="36" y="5"  text-anchor="middle" font-family="monospace" font-size="7" fill="var(--semantic-h)">12</text>
    <text x="68" y="39" text-anchor="end"    font-family="monospace" font-size="7" fill="var(--semantic-h)">3</text>
    <text x="36" y="70" text-anchor="middle" font-family="monospace" font-size="7" fill="var(--semantic-h)">6</text>
    <text x="4"  y="39" text-anchor="start"  font-family="monospace" font-size="7" fill="var(--semantic-h)">9</text>
  </svg>
</div>
