<script>
  // ===== ACCORDION EXPAND/COLLAPSE ALL =====
  document.querySelectorAll('.accordion-controls__btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const group = btn.dataset.accordionGroup;
      const action = btn.dataset.action;
      const items = document.querySelectorAll(`[data-accordion-group="${group}"] details`);
      items.forEach(d => d.open = action === 'expand');
    });
  });

  // ===== DEEP LINKING: open accordion from hash =====
  function openAccordionFromHash() {
    const hash = window.location.hash.replace('#', '');
    if (!hash) return;

    // Map dimension anchors to their accordion details
    const anchorMap = {
      'd5-expressive': 'd5-details',
      'd4-structural': 'd4-details',
      'd3-cognitive': 'd3-details',
      'd2-psychological': 'd2-details',
      'd1-archetypal': 'd1-details',
      'd0-core': 'd0-details',
      'depth-characteristics': 'characteristics-details',
      'vertical-movement': 'movement-details',
    };

    // Check if hash matches a tab deep link (e.g. d5-tabs--frameworks)
    if (hash.includes('--')) {
      const [tabGroupId] = hash.split('--');
      // Find the accordion containing this tab group
      for (const [anchor, detailsId] of Object.entries(anchorMap)) {
        const details = document.getElementById(detailsId);
        if (details && details.querySelector(`#${tabGroupId}`)) {
          details.open = true;
          break;
        }
      }
      return;
    }

    // Direct anchor match
    const detailsId = anchorMap[hash];
    if (detailsId) {
      const details = document.getElementById(detailsId);
      if (details) {
        details.open = true;
        requestAnimationFrame(() => {
          const target = document.getElementById(hash);
          if (target) target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        });
      }
    }
  }

  openAccordionFromHash();
  window.addEventListener('hashchange', openAccordionFromHash);
</script>
