+  border-color: color-mix(in srgb, var(--module-color) 65%, var(--border));
+  box-shadow: 0 4px 20px color-mix(in srgb, var(--module-color) 18%, transparent);
+}
+
+.cat-card--module:hover .cat-card__icon {
+  background: color-mix(in srgb, var(--module-color) 26%, var(--surface));
+}
+
+.cat-card--module:focus-visible {
+  outline: 2px solid var(--module-color);
+  outline-offset: 2px;
+}
+
